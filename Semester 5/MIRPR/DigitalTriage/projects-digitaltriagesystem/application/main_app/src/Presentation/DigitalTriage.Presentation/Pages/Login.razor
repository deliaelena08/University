@page "/login"
@layout Components.Layout.FullScreenLayout
@rendermode RenderMode.InteractiveServer
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

@* Redirect to Razor Page login for proper HTTP context *@

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-5 col-lg-4">
                <div class="auth-card text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Redirecting...</span>
                    </div>
                    <p class="mt-3 text-muted">Redirecting to login page...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Use JavaScript to force a full page navigation (avoids NavigationException)
            await JSRuntime.InvokeVoidAsync("window.location.replace", "/Account/Login");
        }
        await base.OnAfterRenderAsync(firstRender);
    }
}
