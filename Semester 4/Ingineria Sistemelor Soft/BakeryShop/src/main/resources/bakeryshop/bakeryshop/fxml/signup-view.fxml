<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bakeryshop.bakeryshop.controllers.SignupController" stylesheets="@../styles/style.css">
    <VBox alignment="CENTER" spacing="15" styleClass="root-background"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Label text="SIGN UP!" styleClass="title"/>
        <TextField fx:id="fullnameField" promptText="Full Name (e.g. Ana Maria)"/>
        <TextField fx:id="emailField" promptText="Email (e.g. ana_maria@yahoo.ro)"/>
        <PasswordField fx:id="passwordField" promptText="Password (e.g. Ana_mari@2)"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
        <Button text="Signup" onAction="#handleSignup"/>
        <Button text="Cancel" onAction="#cancelSignup"/>
    </VBox>
</AnchorPane>
