<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10.0"
      stylesheets="@../css/client-style.css"
      fx:controller="org.example.ofertedevacanta.controllers.ClientController">

    <Label fx:id="clientNameLabel" styleClass="header-label" />
    <TableView fx:id="offersTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="hotelNameColumn" text="Hotel Name" prefWidth="150"/>
            <TableColumn fx:id="locationNameColumn" text="Location Name" prefWidth="150"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="150"/>
            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
