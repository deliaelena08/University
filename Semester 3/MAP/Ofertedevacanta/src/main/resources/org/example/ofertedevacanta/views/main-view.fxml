<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20.0"
      stylesheets="@../css/main-style.css"
      fx:controller="org.example.ofertedevacanta.controllers.MainController">

    <!-- Label pentru informarea utilizatorului -->
    <Label text="Select a Client:" styleClass="header-label" />

    <!-- ComboBox pentru selectarea clientului -->
    <ComboBox fx:id="clientComboBox" promptText="Choose a client"/>

    <!-- Butoane pentru navigare -->
    <Button fx:id="hotelsButton" text="View Hotels" onAction="#openHotelsView"/>
    <Button fx:id="clientsButton" text="View Clients" onAction="#openClientsView"/>

</VBox>
