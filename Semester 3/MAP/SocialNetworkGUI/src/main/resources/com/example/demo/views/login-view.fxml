<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="520.0" prefWidth="667.0" stylesheets="@../css/loginstyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SocialNetwork.Controller.LogInController">
    <VBox alignment="CENTER" spacing="20.0" prefWidth="300" prefHeight="400" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="Log In" styleClass="title-label"/>
        <Label text="Login here using your username and password" styleClass="subtitle-label"/>

        <VBox spacing="10.0" prefWidth="100" alignment="CENTER">
            <TextField fx:id="textFieldEmail" promptText="anamaria@yahoo.com" styleClass="input-field" />
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
        </VBox>

        <Button fx:id="loginButton" text="Log In" onAction="#handleLogin" styleClass="login-button"/>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup" styleClass="signup-button"/>
        </HBox>
    </VBox>
</AnchorPane>
