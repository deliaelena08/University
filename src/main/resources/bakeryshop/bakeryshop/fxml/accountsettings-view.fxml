<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bakeryshop.bakeryshop.controllers.AccountSettingsController" stylesheets="@../styles/style.css">
    <VBox alignment="CENTER" spacing="15" styleClass="root-background"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Label text="My account" styleClass="title"/>
        <TextField fx:id="emailField" promptText="Email (e.g. ana_maria@yahoo.ro)"/>
        <TextField fx:id="passwordField" promptText="Password (e.g. Ana_mari@2)"/>
        <Button text="Edit Credentials" onAction="#handleEditCredentials" styleClass="button"/>
        <Button text="Save Credentials" onAction="#handleSetCredentials" styleClass="button"/>
        <Button text="Delete Account" onAction="#handleDeleteAccount" styleClass="button"/>
        <Button text="Back" onAction="#handleBack" styleClass="button"/>
    </VBox>
</AnchorPane>
