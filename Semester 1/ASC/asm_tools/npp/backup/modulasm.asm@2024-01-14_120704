bits 32

extern _printf          

global _asm_gasire_cuv
segment data use32 class=data
    propozitie dd 0
    cuvant dd 0
    pozitie dd 0
    mesaj db "We're in", 0
segment code use32 class=code
_asm_gasire_cuv:
        ;creare nou stack-frame
        push ebp
        mov ebp,esp
        
        push dword mesaj
        call _printf
        add esp, 4*1
        
        mov eax,[ebp+8]
        mov [propozitie],eax
        
        mov eax,[ebp+12]
        mov [cuvant],eax
        
        mov eax,[ebp+16]
        mov [pozitie],eax
        
        mov esi,0
        mov eax,[propozitie]
        mov ebx,0
        mov edx,[pozitie]
        cmp ebx,edx
        je position_Zero
        repeta1:
        mov cl,[eax+esi]
        cmp cl,' '
        jne nu_e_spatiu
        inc ebx
        cmp ebx,edx
        je sfarsit_repeta
        
        nu_e_spatiu:
        inc esi
        jmp repeta1
        sfarsit_repeta:
        
        inc esi
        position_Zero:
        mov edi,0
        repeta2:
        mov cl,[eax+esi]
        cmp cl,' '
        je sfarsit
        mov [cuvant+edi],cl
        inc edi
        inc esi
        jmp repeta2
        sfarsit:
        mov byte [cuvant+edi],0
        
        mov esp,ebp
        pop ebp
        ret